<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <Id>a1b2c3d4-5678-9012-abcd-ef1234567890</Id>
  <Version>1.0.0</Version>
  <ProviderName>PM Mayors</ProviderName>
  <DefaultLocale>zh-TW</DefaultLocale>
  <DisplayName DefaultValue="AI 郵件回覆助手" />
  <Description DefaultValue="使用 AI（Claude / GPT / Gemini）分析來信並產生智慧回覆 - BYOK 多模型切換" />
  <IconUrl DefaultValue="https://YOUR_GITHUB_USERNAME.github.io/outlook-ai-reply/icon-64.png" />
  <HighResolutionIconUrl DefaultValue="https://YOUR_GITHUB_USERNAME.github.io/outlook-ai-reply/icon-128.png" />
  <SupportUrl DefaultValue="https://pmmayors.com" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://YOUR_GITHUB_USERNAME.github.io/outlook-ai-reply/index.html" />
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="aiReplyBtn">
                  <Label resid="BtnLabel" />
                  <Supertip>
                    <Title resid="BtnLabel" />
                    <Description resid="BtnDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16" />
                    <bt:Image size="32" resid="Icon32" />
                    <bt:Image size="80" resid="Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskpaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://YOUR_GITHUB_USERNAME.github.io/outlook-ai-reply/icon-16.png" />
        <bt:Image id="Icon32" DefaultValue="https://YOUR_GITHUB_USERNAME.github.io/outlook-ai-reply/icon-32.png" />
        <bt:Image id="Icon80" DefaultValue="https://YOUR_GITHUB_USERNAME.github.io/outlook-ai-reply/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="TaskpaneUrl" DefaultValue="https://YOUR_GITHUB_USERNAME.github.io/outlook-ai-reply/index.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="AI 回覆助手" />
        <bt:String id="BtnLabel" DefaultValue="AI 智慧回覆" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="BtnDesc" DefaultValue="使用 AI 分析郵件內容並產生專業回覆建議" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
